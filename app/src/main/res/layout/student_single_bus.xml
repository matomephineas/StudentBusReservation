<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="10dp"
    android:padding="10dp"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:background="@drawable/rel_background"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/single_bus_relative">

        <TextView
            android:id="@+id/destin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Destination"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_below="@id/destin"
            android:id="@+id/llocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location                          : "
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:textStyle="bold"
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:text="Gauteng"
                android:textSize="16dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/llocation"
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bus name                        : "
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/bus_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:text="bus name"
                android:textSize="16dp"
                 />
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/l1"
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registration number     : "
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/bus_reg_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginStart="10dp"
                android:text="reg"
                android:textSize="14dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/l2"
            android:id="@+id/l3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of seats            : "
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/bus_seats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"

                android:text="Seats"
                android:textSize="14dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/l3"
            android:id="@+id/l4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Departure time               : "
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/bus_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="time"
                android:textSize="14dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/l4"
            android:id="@+id/l5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Booked Seats       : "
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/bus_sets_booked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="booked"
                android:textSize="14dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/l5"
            android:id="@+id/l6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available Seats              : "
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/seats_vailable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="booked"
                android:textSize="14dp"
                android:textStyle="bold" />
        </LinearLayout>
        <Button
            android:id="@+id/select_bus"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/l6"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="70dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/btn_background"
            android:text="Select Bus"
            android:textAllCaps="false"
            android:textSize="18sp" />



    </RelativeLayout>
</androidx.cardview.widget.CardView>